{% set nonav = true %}
{% extends web_root + "fragments/template.peb" %}
{% block title %}Login{% endblock %}
{% block content %}
    <div class="login-form">
        <h1 style="margin-bottom:4px;">Login</h1>
        <p>Simofa v{{ SimofaVersion }}</p>
        <hr>
        {% if error is not empty %}
            <div class="error">{{ error }}</div>
        {% endif %}
        <div id="app"></div>
    </div>
{% endblock %}